<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutResult"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvNumbers"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:letterSpacing="1"
            android:textAlignment="center"
            android:textColor="@color/text_main"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="012" />

        <TextView
            android:id="@+id/tvLeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/leader"
            app:layout_constraintStart_toEndOf="@+id/tvNumbers"
            app:layout_constraintTop_toTopOf="@+id/tvNumbers" />

        <TextView
            android:id="@+id/tvHit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/hit"
            app:layout_constraintBottom_toBottomOf="@+id/tvNumbers"
            app:layout_constraintStart_toEndOf="@+id/tvLeader"
            app:layout_constraintTop_toTopOf="@+id/tvNumbers" />

        <TextView
            android:id="@+id/tvHitValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="@color/text_main"
            app:layout_constraintBottom_toBottomOf="@+id/tvHit"
            app:layout_constraintStart_toEndOf="@+id/tvHit"
            app:layout_constraintTop_toTopOf="@+id/tvHit"
            tools:text="0" />

        <TextView
            android:id="@+id/tvBlow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:text="@string/blow"
            app:layout_constraintBottom_toBottomOf="@+id/tvNumbers"
            app:layout_constraintStart_toEndOf="@+id/tvLeader"
            app:layout_constraintTop_toTopOf="@+id/tvNumbers" />

        <TextView
            android:id="@+id/tvBlowValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="@color/text_main"
            app:layout_constraintBottom_toBottomOf="@+id/tvBlow"
            app:layout_constraintStart_toEndOf="@+id/tvBlow"
            app:layout_constraintTop_toTopOf="@+id/tvBlow"
            tools:text="0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>